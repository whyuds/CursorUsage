{
  "name": "cursor-usage-monitor",
  "displayName": "Cursor Usage",
  "description": "Monitor Cursor AI usage statistics in real-time",
  "version": "1.0.0",
  "publisher": "whyuds",
  "repository": {
    "type": "git",
    "url": "https://github.com/whyuds/CursorUsage.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "img/logo_256.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorUsage.refresh",
        "title": "Cursor Usage: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "cursorUsage.updateSession",
        "title": "Cursor Usage: Update Session Token",
        "icon": "$(settings-gear)"
      }
    ],
    "configuration": {
      "title": "Cursor Usage",
      "properties": {
        "cursorUsage.sessionToken": {
          "type": "string",
          "default": "",
          "description": "The WorkosCursorSessionToken value from Cursor.com cookies"
        },
        "cursorUsage.refreshInterval": {
          "type": "number",
          "default": 300,
          "description": "Interval in seconds to refresh usage data automatically"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "node esbuild.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "esbuild": "^0.19.0",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}